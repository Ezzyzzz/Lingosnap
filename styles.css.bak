/* Reset some basic styling */
body, h1, h2, h3, p {
    margin: 0;
    padding: 0;
}

/* General styles */
body {
    font-family: 'Arial', sans-serif;
    background-image: url('sunset.png'); /* Path to your background image */
    background-size: cover; /* Make the image cover the entire background */
    background-position: center; /* Center the image */
    background-repeat: no-repeat; /* Prevent tiling */
    color: #333; /* Adjust text color for readability */
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    margin: 0;
    position: relative;
}

body::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, rgba(255, 123, 0, 0.7), rgba(0, 123, 255, 0.7));
    z-index: -1;
}

.container {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
    padding: 20px 40px;
    width: 90%;
    max-width: 400px;
    transition: transform 0.3s ease;
    animation: fadeIn 1s ease;
}

.container:hover {
    transform: translateY(-5px) scale(1.02) rotate(1deg);
}

h1 {
    font-size: 2rem;
    color: #2c3e50;
    margin-bottom: 20px;
    animation: slideIn 1.5s ease-out;
}

@keyframes slideIn {
    from {
        transform: translateY(-100%);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

button {
    background-color: #3498db; /* Blue */
    color: white;
    font-size: 1.2rem;
    border: none;
    border-radius: 5px;
    padding: 10px 20px;
    cursor: pointer;
    margin: 10px 0;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    transition: background-color 0.3s ease, transform 0.2s ease;
}

button:hover {
    background-color: #1d72b8;
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 0 15px rgba(49, 140, 231, 0.6);
}

button:active {
    transform: translateY(1px);
}

.back-button {
    background-color: #e74c3c; /* Red */
    color: white;
    font-size: 1rem;
    border: none;
    border-radius: 5px;
    padding: 8px 16px;
    cursor: pointer;
    margin-top: 20px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.back-button:hover {
    background-color: #c0392b;
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 0 15px rgba(231, 76, 60, 0.6);
}

.back-button:active {
    transform: translateY(1px);
}
